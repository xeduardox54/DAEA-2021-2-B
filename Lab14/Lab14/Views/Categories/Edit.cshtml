@model Categories
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
<div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label">@Html.LabelFor(model => model.CategoryID)</label>
        @Html.TextBoxFor(model => model.CategoryID, new { @readonly = "readonly" } )
        @*Html.ValidationMessageFor(model => model.CategoryID)*@
</div>
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">@Html.LabelFor(model => model.CategoryName)</label>
        @Html.EditorFor(model => model.CategoryName)
        @Html.ValidationMessageFor(model => model.CategoryName)
    </div>
    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">@Html.LabelFor(model => model.Description)</label>
        @Html.EditorFor(model => model.Description)
        @Html.ValidationMessageFor(model => model.Description)
    </div>
    <div class="col-auto">
        <input type="submit" class="btn btn-primary mb-3" value="Create" />
    </div>
}

<div>
    @Html.ActionLink("Retornar al index", "Index")
</div>